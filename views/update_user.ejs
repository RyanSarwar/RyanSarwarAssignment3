    <h2>
      Update User
    </h2>
    <span>Use the Form Below to Update an Existing User to the Database</span>
  </div>
<form method="POST"id ="add_user">
  <div class="new_user">
    <div class="form-group">
      <label for="FName">First Name</label> <!---Label--->
      <input type="hidden" name="id" value=""> 
      <input type="text" name="name" value="" placeholder="First Name" required> <!---Adds placeholder text and requires the textbox to be filled--->
    </div>
    <div class="form-group">
      <label for="LName">Last Name</label>
      <input type="hidden" name="id" value=""> <!---get the last name from the value--->
      <input type="text" name="name" value="" placeholder="Last Name" required>
    </div>
    <div class="form-group">
      <label for="Movie">Movie Title</label>
      <input type="hidden" name="id" value="">
      <input type="text" name="name" value="" placeholder="Movie Title" required>
    </div>
    <div class="form-group">
      <label for="Name">Date Rented</label>
      <input type="hidden" name="id" value="">
      <input type="date" name="date" value="" placeholder="Date Rented" min="2022-11-18" max="2023-12-31" required>
    </div>
    <div class="form-group">
      <label for="Name">Date Returned</label>
      <input type="hidden" name="id" value="">
      <input type="date" name="date" value="" placeholder="Date Returned" min="2022-11-18" max="2023-12-31" required>
    </div>
    <div class="form-group">
      <label for="Name">Rental Fee</label>
      <input type="hidden" name="id" value="">
      <input type="number" name="number" value="" placeholder="Rental Fee ($)" required>
    </div>
  </div>

<!---Submit Button Creation--->
  <div class="form-group">
    <button type="submit" class="btn text-dark update">
      Edit Current Entry 
    </button>
  </div>
